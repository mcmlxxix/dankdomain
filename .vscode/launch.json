  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "launch ddgame app",
      "program": "${workspaceFolder}/build/door/app.js",
      "cwd": "${workspaceFolder}",
      "outFiles": [ "${workspaceFolder}/build/door" ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "ws://0.0.0.0:([0-9]+)",
        "uriFormat": "http://localhost:%s"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch telnet client",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/build/ttymain.js",
      "cwd": "${workspaceFolder}",
      "outFiles": [ "${workspaceFolder}/build" ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
